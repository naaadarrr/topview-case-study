{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/.source": ["./.source"]
    }
  },
  "include": [
    "app",
    "components",
    "lib",
    "src",
    "blog",
    "pages",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}
